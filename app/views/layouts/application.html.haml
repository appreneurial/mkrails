!!!
%html{lang: "en"}
	%head
		%meta{charset: "utf-8"}
		%meta{"http-equiv" => "X-UA-Compatible", "content" => "IE=edge"}
		%meta{name: "viewport", content: "width=device-width, initial-scale=1"}
		%title <%= @app_name.titleize %>
		= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
		/[if lt IE 9]
			%script{src: "https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"}
			%script{src: "https://oss.maxcdn.com/respond/1.4.2/respond.min.js"}
		= csrf_meta_tags
	%body
		= bootstrap_navbar(brand: "<%= @app_name.titleize %>", fixed: :top, fluid: true, inverse: true) do
			= bootstrap_navbar_nav do
				= bootstrap_nav_link("Home", root_path, active: controller_name == "home")
		.container-fluid
			= bootstrap_flash(dismissible: true)
			= yield
		%footer
			.container-fluid
				%p.pull-right
					&copy; <%= Time.now.year %> #{ Time.now.year == <%= Time.now.year %> ? "" : "-#{Time.now.year}" } #{link_to "<%= ENV["MKRAILS_SITE_OWNER"] %>", "<%= ENV["MKRAILS_SITE_OWNER_URL"] %>", target: "_blank" }
		/ Javascript
		= javascript_include_tag 'application', 'data-turbolinks-track' => true