- set_meta_data(title: "Reset Your Password")
= bootstrap_row do
	= bootstrap_column(size: {md: 4}, offset: {md: 4}) do
		= bootstrap_page_header do
			%h1 Reset Your Password
		= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
			= f.error_notification
			.form-inputs
				= f.input :email, required: true, autofocus: true, label: "Your Email Address", placeholder: "Enter your email address"
			.form-actions
				= f.button :submit, "Reset Password", class: "btn btn-primary btn-lg btn-block"
		= render "devise/shared/links"
