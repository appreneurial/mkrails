= bootstrap_row do
  = bootstrap_column(size: {md: 8}, offset: {md: 2}) do
    = bootstrap_page_header do
      %h1 Account Settings
= bootstrap_row do
  = bootstrap_column(size: {md: 4}, offset: {md: 2}) do
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = f.error_notification
      .form-inputs
        = f.input :email, required: true, autofocus: true, label: "Your Email Address", placeholder: "Enter your email address"
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %p Currently waiting confirmation for: #{resource.unconfirmed_email}
        = f.input :password, autocomplete: "off", hint: "Leave this blank to keep your current password", required: false, label: "Your New Password", placeholder: "Enter your new password"
        = f.input :password_confirmation, required: false, label: "Confirm Your New Password", placeholder: "Enter your new password again to confirm"
        = f.input :current_password, hint: "We need your current password to confirm your changes", required: true, label: "Your Current Password", placeholder: "Enter your current password"
      .form-actions
        = f.button :submit, "Save Changes", class: "btn btn-primary btn-lg btn-block"
  = bootstrap_column(size: {md: 4}) do
    %p You may cancel your account at any time (no questions asked) by clicking on the button below:
    %p.pull-right= link_to "Cancel Account", registration_path(resource_name), data: { confirm: "Are you sure you want to cancel your account?" }, method: :delete, class: "btn btn-danger"